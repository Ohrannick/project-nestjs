{{#if news}}
<h1>{{title}}</h1>
<div class="row">
  {{#each news}}
  <div class="col-lg-4" style="margin-bottom: 10px">
    <div class="card" style="height: auto">
      <img src='http://localhost:3000{{this.cover}}' class="card-img-top" style="height: 200px; object-fit: cover;"
        alt=''>
      <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <h6 class="card-subtitle mb-2 text-muted">Автор: {{this.author}}</h6>
        <h6 class="card-subtitle mb-2 text-muted">Количество просмотров: {{this.countViews}} </h6>
        <p class="card-text">{{this.description}}</p>
        <a href="http://localhost:3000/news/detail/{{this.id}}" class="btn btn-primary">К новости</a>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{else}}
<h1>Список новостей пуст!</h1>
{{/if}}